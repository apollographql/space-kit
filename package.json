{
  "name": "@apollo/space-kit",
  "version": "1.0.0",
  "description": "Home base for Apollo's design system",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all -p build:reset icons -s build:typescript",
    "build:icons": "run-s icons build:typescript",
    "build:reset": "ts-node build-reset.ts",
    "build:storybook": "build-storybook --quiet",
    "build:typescript": "tsc --build",
    "clean": "run-p clean:*",
    "clean:button": "rimraf Button",
    "clean:colors": "rimraf colors",
    "clean:fonts": "rimraf fonts",
    "clean:icons": "rimraf icons/*.tsx icons/*.js icons/*.js.map icons/*.d.ts icons/tsconfig.tsbuildinfo",
    "clean:modal": "rimraf Modal",
    "clean:shared": "rimraf shared",
    "clean:table": "rimraf Table",
    "clean:typography": "rimraf typography",
    "netlify": "run-s build build:storybook",
    "icons": "run-s clean:icons icons:generate",
    "icons:generate": "ts-node src/icons/scripts/convert",
    "lint": "eslint --max-warnings 0 --cache --ext .js,.jsx,.ts,.tsx .eslintrc.js build-reset.ts components-util/ .storybook/ stories/ src/",
    "postpublish": "git push --follow-tags --set-upstream origin $branch && auto release",
    "prepare": "npm run build",
    "release": "./scripts/release.sh",
    "start": "npm run storybook",
    "storybook": "start-storybook -p 6006",
    "test": "run-p test:typescript",
    "test:typescript": "tsc --noEmit",
    "watch": "run-p watch:*",
    "watch:typescript": "tsc --watch",
    "watch:npmwatch": "npm-watch"
  },
  "watch": {
    "build:icons": {
      "extensions": [
        "svg"
      ],
      "patterns": [
        "src/icons/svgs"
      ]
    }
  },
  "repository": "apollographql/space-kit",
  "keywords": [],
  "license": "MIT",
  "eslintConfig": {
    "extends": "@trevorblades"
  },
  "dependencies": {
    "@emotion/core": "^10.0.14"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@storybook/addon-knobs": "^5.1.9",
    "@storybook/addons": "^5.1.9",
    "@storybook/react": "^5.1.9",
    "@svgr/core": "^4.3.0",
    "@svgr/plugin-jsx": "^4.3.0",
    "@svgr/plugin-prettier": "^4.2.0",
    "@svgr/plugin-svgo": "^4.2.0",
    "@trevorblades/eslint-config": "^6.22.1",
    "@types/classnames": "^2.2.9",
    "@types/less": "^3.0.0",
    "@types/react": "^16.8.21",
    "@types/storybook__addon-knobs": "^5.0.2",
    "@types/storybook__react": "^4.0.2",
    "@types/svgo": "^1.2.1",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "auto": "^7.2.3",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "classnames": "^2.2.6",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-problems": "^3.0.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.1",
    "immutability-helper": "^3.0.1",
    "less": "^3.9.0",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0",
    "rimraf": "^2.6.3",
    "styled-system": "^5.0.12",
    "svgo": "^1.2.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2"
  },
  "peerDependencies": {
    "react": ">16"
  }
}
