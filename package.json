{
  "name": "@apollo/space-kit",
  "version": "0.1.0",
  "description": "Home base for Apollo's design system",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all -p build:reset icons -s build:typescript",
    "build:icons": "run-s icons build:typescript",
    "build:reset": "node build-reset.js",
    "build:storybook": "build-storybook --quiet",
    "build:typescript": "tsc --build",
    "colors:clean": "rimraf colors/*.js colors/*.js.map colors/*.d.ts",
    "netlify": "run-s build build:storybook",
    "icons": "run-s icons:clean icons:generate",
    "icons:clean": "rimraf icons/*.tsx icons/*.js icons/*.js.map icons/*.d.ts",
    "icons:generate": "node icons/src/scripts/convert.js",
    "prepare": "npm run build",
    "start": "npm run storybook",
    "storybook": "start-storybook -p 6006",
    "test": "run-p test:typescript",
    "test:typescript": "tsc --noEmit",
    "watch": "tsc --watch"
  },
  "repository": "apollographql/space-kit",
  "keywords": [],
  "license": "MIT",
  "eslintConfig": {
    "extends": "@trevorblades"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@storybook/addon-knobs": "^5.1.9",
    "@storybook/addons": "^5.1.9",
    "@storybook/react": "^5.1.9",
    "@svgr/core": "^4.3.0",
    "@svgr/plugin-jsx": "^4.3.0",
    "@svgr/plugin-prettier": "^4.2.0",
    "@svgr/plugin-svgo": "^4.2.0",
    "@trevorblades/eslint-config": "^6.22.1",
    "@types/react": "^16.8.21",
    "@types/storybook__react": "^4.0.2",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "eslint": "^5.16.0",
    "less": "^3.9.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "svgo": "^1.2.2",
    "typescript": "^3.5.2"
  },
  "peerDependencies": {
    "react": ">16"
  }
}
